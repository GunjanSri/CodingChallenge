<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button">
        <item name="android:paddingLeft">5sp</item>
        <item name="android:paddingRight">5sp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="AddNote">
        <item name="android:maxLength">10</item>
        <item name="android:radius">3dp</item>
        <item name="android:strokeWidth">3</item>
        <item name="android:strokeColor">@color/colorPrimary</item>
        <item name="android:background">@color/grey</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CounterColor" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="ListTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">10sp</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
